@model Lab1.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit user";
}

<h1>Edit user</h1>

<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Nick"></label><br />
        <input asp-for="Nick" />
        <span asp-validation-for="Nick"></span>
    </div>
    <p></p>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>

<form asp-action="Index" asp-controller="Users">
    <div class="form-group">
        <input type="submit" value="Back" class="btn btn-outline-secondary" />
    </div>
</form>