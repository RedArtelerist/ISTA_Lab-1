@model Lab1.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<h2>Change password for user @Model.Email</h2>
<form method="post" asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div>
        <label asp-for="OldPassword" class="control-label">OldPassword</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div>
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>
<form asp-action="Index" asp-controller="Users">
    <div class="form-group">
        <input type="submit" value="Back" class="btn btn-outline-secondary" />
    </div>
</form>

